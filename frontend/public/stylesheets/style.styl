body
	background-color: #151515
	font-family: "Ubuntu", "Arial", sans-serif
	color: white

/*
 * LOGIN BOX ------------------------------------------------
 */

#login
	color: white
	position: absolute
	top: 50%
	left: 0
	width: 100%
	margin-top: -100px

#login #loginform
	width: 15em
	padding: 1em 0
	margin: 0 auto
	text-align: center
	background-color: #222
	border-radius: 1em
	box-shadow: 0 0 1em #000

#loginform input
	border: 0
	width: 10em

	background-color: #111
	color: white
/*
 * LOGIN BOX ------------------------------------------------
 */

#menu
	position: absolute
	top: 0
	width: 100%
	background-image: linear-gradient(bottom, rgb(0,0,0) 0%, rgb(46,45,46) 100%);
	background-image: -o-linear-gradient(bottom, rgb(0,0,0) 0%, rgb(46,45,46) 100%);
	background-image: -moz-linear-gradient(bottom, rgb(0,0,0) 0%, rgb(46,45,46) 100%);
	background-image: -webkit-linear-gradient(bottom, rgb(0,0,0) 0%, rgb(46,45,46) 100%);
	background-image: -ms-linear-gradient(bottom, rgb(0,0,0) 0%, rgb(46,45,46) 100%);
	height: 3em
	box-shadow: 0 0 1em black

#menu img
	width: 4em
	margin-top: 0.8em
	margin-left: 0.5em

#container
	margin: 5em auto;
	width: 50em;
	box-shadow: 0 0 1em rgba(0,0,0,0.4) inset;
	min-height: 10em;
	background-color: #252525;
	padding: 1em

#container h1
	font-size: 1.5em
	display: block
	float: left
	margin-right: 1em

#container h2.hostname
	float: left
	line-height: 2.0em
	font-size: 0.9em
	font-weight: 300
	color: #eee

#container #bandwidthBar
	height: 1.25em
	width: 18em
	border-radius: 0.3em
	border: 1px solid rgba(0,0,0,0.25)
	float: right
	overflow: hidden
	background-image: url('http://i.imgur.com/PENNU.png');

#container #bandwidthBar #bandwidthUsed
	background-color: #0075ed
	height: 100%
	width: 10%
	border-radius: 0.3em
	-webkit-transition: width 1s ease-in-out
	-moz-transition: width 1s ease-in-out
	background-image: url('http://i.imgur.com/PENNU.png');
	z-index: 0
	float: left
	position: relative

#container #bandwidthBar #bandwidthUsedText
	z-index: 5
	color: white
	float: right
	width: 24em
	text-align: center
	position: absolute
	font-weight: 700
	text-shadow: 0 2px 0 black
	font-size: 0.75em
	line-height: 1.6667em

#container #controls
	background-image: -webkit-linear-gradient(bottom, rgb(40,40,40) 0%, rgb(60,60,60) 100%);
	background-image: -moz-linear-gradient(bottom, rgb(40,40,40) 0%, rgb(60,60,60) 100%);
	clear: both
	height: 2.5em
	border-radius: 0.4em
	border: 1px solid #222
	margin-top: 3em

#container #controls a
	display: block
	float: left
	height: 100%
	padding: 0 1em
	line-height: 2.3em
	text-decoration: none
	color: white
	border-right: 2px rgba(100,100,100,.4) ridge
	text-shadow: 0 1px 0 black

#container #controls a:hover
	background-image: -webkit-linear-gradient(bottom, rgb(50,50,50) 0%, rgb(70,70,70) 100%);
	background-image: -moz-linear-gradient(bottom, rgb(50,50,50) 0%, rgb(70,70,70) 100%);
	color: #aaa

#container #controls a:active
	background-image: -webkit-linear-gradient(bottom, rgb(60,60,60) 0%, rgb(40,40,40) 100%);
	background-image: -moz-linear-gradient(bottom, rgb(60,60,60) 0%, rgb(40,40,40) 100%);
	color: #aaa

#container #controls a:first-child:hover
	border-bottom-left-radius: 0.4em
	border-top-left-radius: 0.4em

#information h2
	font-style: italic
	line-height: 3.5em
